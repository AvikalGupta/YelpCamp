<% layout('layouts/boilerplate') %>
    <div id="map" style="width:100%; height:250px"></div>
    <!-- <h1 class="text-center mt-5">All Campgrounds</h1> -->
    <!-- <a class="btn btn-outline-info offset-5 mt-3" href="/campgrounds/new">Add Campground</a> -->

    <% for(let campground of campgrounds) { %>
        <div class="card mb-1 mt-3">
            <div class="row">
                <div class="col-md-4">
                    <% if(campground.images.length) { %>
                        <img class="img-fluid" src="<%= campground.images[0].url %>" alt="">
                        <% } else { %>
                            <img class="img-fluid"
                                src="https://res.cloudinary.com/dmaluloab/image/upload/v1622383183/YelpCamp/vmvnwsuiiqt6ywyxnofg.jpg">
                            <% } %>
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= campground.title %>
                        </h5>
                        <p class="card-text">
                            <%= campground.discription %>
                        </p>
                        
                        <p class="card-text">
                            <small class="text-muted">
                                <%= campground.location %>
                            </small>
                        </p>
                        <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">
                            <%= campground.title %>
                        </a>
                    </div>
                </div>
            </div>

        </div>
        <% } %>
            <script>
                const mapToken = '<%- process.env.MAPBOX_TOKEN %>';
                const campgrounds = { features: JSON.parse('<%- JSON.stringify(campgrounds)%>') };
            </script>
            <script src="/js/clusterMap.js"></script>